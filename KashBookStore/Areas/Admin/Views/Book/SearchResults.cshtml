@model SearchViewModel

@{
    ViewData["Title"] = " | Search Results";
}

<div class="row">
    <div class="col">
        <h1 class="mb-2">@Model.Header</h1>
    </div>
    <div class="col">
        <div class="float-right pr-2">
            <a asp-controller="Book" asp-action="Index">New Search</a>
        </div>
    </div>
</div>

<table class="table">
    <tbody>
        @foreach(var book in Model.Books)
        {
            <tr>
                <td>
                    <a asp-area="" asp-controller="Book" asp-action="Details" asp-route-id="@book.BookID">
                        @book.Title
                    </a>
                </td>
                <td>@book.Genre.Name</td>
                <td>
                    @foreach(KashBookStore.Models.DomainModels.BookAuthor ba in book.BookAuthors)
                    {
                        <div>@ba.Author.FullName</div>
                    }
                </td>
                <td>
                    <div class="float-right">
                        <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.BookID" class="btn btn-primary">Edit</a>
                        <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.BookID" class="btn btn-primary">Delete</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>