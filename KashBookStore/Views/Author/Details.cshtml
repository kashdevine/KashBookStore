@model KashBookStore.Models.DomainModels.Author

@{ 
    ViewData["Title"] = " | Author";
}


<h1>Author</h1>

<table class="table table-bordered table-sm">
    <thead>
        <tr class="thead-dark">
            <th>@Model.FullName</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @foreach(var ba in Model.BookAuthors)
                {
                    <p>
                        <a asp-controller="Book" asp-action="Details" asp-route-id="@ba.BookID">@ba.Book.Title</a>
                    </p>
                }
            </td>
        </tr>
    </tbody>
</table>