@model KashBookStore.Models.DomainModels.Book

@{ 
    ViewData["Title"] = " | Book Details";
}

<h1>Book Details</h1>

<table class="table table-bordered table-sm">
    <thead>
        <tr class="thead-dark">
            <th>Title:</th>
            <th>@Model.Title</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@(Model.BookAuthors.Count > 1 ? "Authors" : "Author")</td>
            <td>
                @foreach(KashBookStore.Models.DomainModels.BookAuthor ba in Model.BookAuthors)
                {
                    <p>
                        <a asp-controller="Author" asp-action="Details" asp-route-id="@ba.AuthorID">@ba.Author.FullName</a>
                    </p>
                }
            </td>
        </tr>
        <tr>
            <td>Price:</td>
            <td>@Model.Price.ToString("c")</td>
        </tr>
        <tr>
            <td>
                Genre:
            </td>
            <td>
                @Model.Genre.Name
            </td>
        </tr>
    </tbody>
</table>

<form asp-controller="Cart" asp-action="Add" method="post">
    <button type="submit" name="id" value="@Model.BookID" class="btn btn-primary">Add to Cart</button>
</form>