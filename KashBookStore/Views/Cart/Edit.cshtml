@model KashBookStore.Models.DomainModels.CartItem

@{ 
    ViewData["Title"] = " | Edit Cart";
}

<h1>Edit Cart Item</h1>
<form asp-controller="Cart" asp-action="Edit" method="post">
    <ul class="list-group mb-2">
        <li class="list-group-item">@Model.Book.Title</li>
        <li class="list-group-item">
            <div class="col-1">
                <label>Price:</label>
            </div>
            <div class="col-1">
                @Model.Book.Price.ToString("c");
            </div>
        </li>
        <li class="list-group-item">
            <div class="form-row">
                <div class="col-1">
                    <label asp-for="Quantity">Quantity:</label>
                </div>
                <div class="col-1">
                    <select asp-for="Quantity" class="form-control">
                        @for(int i=1; i <= 10; i++)
                        {
                            <option>@i</option>
                        }
                    </select>
                </div>
            </div>
        </li>
    </ul>
    <input type="hidden" asp-for="Book.BookID" />
    <input type="hidden" asp-for="Book.Title" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Cart" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>